.tab-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 110rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-top: 1px solid #eee;
  z-index: 9999;
}
.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #888;
  font-size: 28rpx;
}
.tab-bar-item.active {
  color: #0052d9;
  font-weight: bold;
}
.tab-bar-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
} 
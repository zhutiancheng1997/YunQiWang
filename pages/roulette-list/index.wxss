.container {
  padding: 24rpx;
}
.tabs {
  display: flex;
  margin-bottom: 24rpx;
}
.tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 32rpx;
  color: #888;
  border-bottom: 4rpx solid transparent;
}
.tab.active {
  color: #2d5af1;
  border-bottom: 4rpx solid #2d5af1;
}
.create-btn {
  margin: 24rpx 0;
  padding: 20rpx;
  background: #f5f7fa;
  color: #2d5af1;
  text-align: center;
  border-radius: 16rpx;
  font-size: 32rpx;
}
.roulette-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
.roulette-card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx #eee;
  padding: 32rpx;
}
.roulette-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}
.roulette-actions {
  display: flex;
  gap: 24rpx;
}
.tabbar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 110rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-top: 1px solid #eee;
  z-index: 9999;
}
.tabbar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #888;
  font-size: 28rpx;
}
.tabbar-item.active {
  color: #0052d9;
  font-weight: bold;
} 
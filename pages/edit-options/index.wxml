  <l-input label="标题" placeholder="请输入转盘标题" value="{{title}}" bind:input="onTitleInput" border="false" clearable />
  <block wx:for="{{options}}" wx:key="index">
    <view class="option-row">
      <l-input label="抽奖项" label-layout="left" placeholder="请输入抽奖项" value="{{item}}" bind:input="onOptionInput" data-index="{{index}}" border="false" clearable >
        <view slot="right" class="delete-icon-area" data-index="{{index}}" bindtap="removeOption">
          <l-icon name="delete" />
        </view>
      </l-input>
    </view>
    <block wx:if="{{index === options.length - 1}}">
      <l-button class="add-btn-full" type="primary" block="true" data-index="{{index}}" bindtap="addOption">
        <view style="display:flex;justify-content:center;align-items:center;width:100%;height:100%;">
        <l-icon name="add" />增加
        </view>
      </l-button>
    </block>
  </block>

